---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import '@/styles/globals.css'
import '@/styles/global.css'
import { Button } from "@/components/ui/button"
---
<script is:inline>
	const getThemePreference = () => {
		if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
			return localStorage.getItem('theme');
		}
		return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
	};
	const isDark = getThemePreference() === 'dark';
	document.documentElement.classList[isDark ? 'add' : 'remove']('dark');
 
	if (typeof localStorage !== 'undefined') {
		const observer = new MutationObserver(() => {
			const isDark = document.documentElement.classList.contains('dark');
			localStorage.setItem('theme', isDark ? 'dark' : 'light');
		});
		observer.observe(document.documentElement, { attributes: true, attributeFilter: ['class'] });
	}
</script>

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<div class="wrapper">
			<Header />
			<video id="backgroundImage" autoplay loop>
				<source src="/src/assets/bkvideo.mp4" type="video/mp4">
			</video>
			<div class="content-wrapper">
				<div class="content">
					<table>
						<tr>
							<th>
								<main>
									<h1>üêé Bem-vindo, Mustangueiro!</h1>
									<h2 class="divider line one-line" contenteditable><img src="/src/assets/logo_no_bk.png" width="70px"></h2>
									<p>
										Bem-vindo ao centro da paix√£o pelos Mustangs no Norte de Portugal! 
									</p>
									<h2 class="divider line one-line" contenteditable><img src="/src/assets/logo_no_bk.png" width="70px"></h2>
									<Button>Saber mais</Button>
								</main>
							</th>
						</tr>
					</table>
				</div>
			</div>
		</div>
	</body>
</html>


<style>
	.wrapper {
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}

	.content-wrapper {
		display: flex;
		flex-direction: column;
		flex: 1;
	}

	.content {
		flex: 1;
	}
	main {
		text-align: center;
		text-justify: inter-word;
		height: auto;
	}
	h1, p {
		margin: 5%;
	}
	#backgroundImage {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		object-fit: cover;
		z-index: -1;
		opacity: 0.7;
	}
	.divider {
		display: flex;
		
		&:before,
		&:after {
			content: "";
			flex: 1;
		}
	}
	.line {
		align-items: center;
		margin: 1em -1em;
		
		&:before,
		&:after {
			height: 1px;
			margin: 0 1em;
		}
	}
  	.one-line {
		&:before,
		&:after {
			background: black;
		}
	}
	footer {
		margin-top: auto;
	}
</style>